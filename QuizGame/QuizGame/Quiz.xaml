<Window x:Class="QuizGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*" />
            <ColumnDefinition Width="29*" />
            <ColumnDefinition Width="139*" />
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="201,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="345" Grid.ColumnSpan="3" ><Run Text="Select a message option and then choose the Display button" /><Run Text="!" /><LineBreak /><Run /></TextBlock>
        <RadioButton x:Name="GoodbyeButton" Content="GoodBye" Grid.Column="2" HorizontalAlignment="Left" Margin="104,145,0,0" VerticalAlignment="Top" />
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="151,145,0,0" VerticalAlignment="Top" IsChecked="True" />
        <Button Content="Display" HorizontalAlignment="Left" Margin="1.595,243,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Button_Click" />
    </Grid>
</Window>